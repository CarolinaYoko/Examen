#include <stdio.h>
#include <stdlib.h>
#include <math.h>

float pedirNumero(char texto[]); //Funcion que pida un numero
//int validarNumero(float numero); //Funcion que valide un numero
float sumarNumeros(float num1, float num2);
float restarNumeros(float num1, float num2);
float dividirNumeros(float num1, float num2);

int main(void) {

	setbuf(stdout, NULL);

	float a;
	float b;
	int opcion;
	char respuesta;
	do {

		printf("  ¡Bienvenido! \n");
		printf("\n MENU DE OPCIONES: \n\n");
		printf("1. Ingresar el 1er operando \n");
		printf("2. Ingresar el 2do operando \n");
		printf("3. Calcular todas las operaciones \n");
		printf("4. Informar resultados \n");
		printf("5. Salir \n");
		printf("\nIngrese una opcion:");
		scanf("%d", &opcion);

		switch (opcion) {
		case 1:
			system("cls");
			a = pedirNumero("\nPor favor, ingrese el primer operando: ");
			break;
		case 2:
			system("cls");
			b = pedirNumero("\nPor favor, ingrese el segundo operando: ");
			break;
		case 3:

			break;
		case 4:
			break;
		case 5:
			break;

		}

		printf("\n ¿Desea volver al menu? s/n ");
		fflush(stdin);
		scanf("%c", &respuesta);
		system("cls");

	} while (respuesta == 's');

	printf("\nUsted ingreso %.2f y %.2f ", a, b);

	return EXIT_SUCCESS;
}

float pedirNumero(char texto[]) {
	float numero;
	printf(texto);
	scanf("%f", &numero);
	return numero;

}

float sumarNumeros(float num1, float num2) {
	float suma;
	suma = num1 + num2;
	return suma;
}

float restarNumeros(float num1, float num2) {
	float resta;
	resta = num1 - num2;
	return resta;
}

float dividirNumeros(float num1, float num2) {
	float cociente;
	if(num2==0){
		printf("Math Error. No es posible la division por cero");
	}
	else
	{
		cociente = num1 / num2;
	}

	return cociente;
}

float multiplicarNumeros(float num1, float num2) {
	float producto;
	producto = num1 * num2;
	return producto;
}

int factorial(float num) {
	int fac;
	if (num == 0)
	{
		fac = 1;
	}
	else
	{
		fac = num * factorial(num - 1);
	}
	return fac;
}

